{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "pretty": true,
        "sourceMap": true,
        "declaration": true,
        "importHelpers": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "strictNullChecks": true
    }
}
