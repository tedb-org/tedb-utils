{
  "extends": "./configs/base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./",
    "lib": [
        "es6",
        "es2015",
        "es2017",
        "es2016.array.include",
        "es2017.object"
    ]
  },
  "include": [
    "src/**/*.ts",
    "node_modules/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "spec",
    "webpack"
  ]
}
